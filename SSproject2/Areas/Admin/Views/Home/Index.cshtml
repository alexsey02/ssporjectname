@model IQueryable<PostItem>//обЪявление модели наследования
@{
    ViewBag.Title = "Администратор";
}

<div>
    <h2>@ViewBag.Title</h2>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Выйти" class="btn btn-info" />
        </form>
    </div>
    <div class="alert alert-info" role="alert">
        <h2>Редактировать страницы сайта</h2>
        <a class="btn btn-primary alert-info"  asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageIndex">Главная</a>
        <a class="btn btn-primary alert-info" asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageContacts">Контакты</a>
    </div>

</div>

